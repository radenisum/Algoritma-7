#include <iostream>

using namespace std;

int main() {
	int n; 
    int angka;
    int total=0;
    int i; 
 
    cout<< "Masukkan Banyaknya Angka : ";
    cin>>n;
    cout<<endl;
    
    for (i=1; i<=n; i++) { 
        cout<< "Masukkan Angka   " << i << " : ";
        cin>> angka;
        total = total + angka;
        
        }
cout<<endl<< "Total     : "<<total<<endl;

	return 0;
}
