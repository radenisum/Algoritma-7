#include <iostream>

using namespace std;

int main ()
{
int nilai; 

int faktorial=1;


cout<< "NILAI FAKTORIAL"<<endl<<endl;

cout<< "masukkan nilai      : "<<endl;
cin>> nilai;

cout<< "faktorial : ";

for (; nilai>0; nilai--)
{
cout<<nilai;
if (nilai != 1) {
cout<< "x";}
faktorial = faktorial * nilai;

}
cout<< " = "<<faktorial<<endl;

return 0;
}
